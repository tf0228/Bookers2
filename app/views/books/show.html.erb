<div class="row">
  <%= render 'layouts/sidebar' %>
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= link_to @book_detail.user.name, user_path(@book_detail.user_id) %>
          </td>
          <td><%= link_to @book_detail.title, book_path(@book_detail) %></td>
          <td><%= @book_detail.body %></td>
          <% if @book_detail.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book_detail), class: "btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book_detail), class: "btn-sm btn-danger", method: :delete, data: { confirm: "本当に消しますか？"} %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
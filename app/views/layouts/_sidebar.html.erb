<div class="col-xs-3">
  <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user) do %>
      <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
    <% end %>
  </div>
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <div class="field row" %>
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>

    <div class="field row" %>
      <%= f.label :tbody, 'Option' %>
      <%= f.text_field :body, class: "col-xs-12" %>
    </div>

    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>

  <% end %>
</div>
